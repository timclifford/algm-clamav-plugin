{
  "name": "timclifford/drutiny-clamav-plugin",
  "type": "library",
  "description": "ALGM Drutiny plugin for ClamAV scans.",
  "keywords": ["ClamAV", "audit", "drush", "security", "report"],
  "authors": [
    {"name": "Tim Clifford", "email": "tim.clifford@amazee.com"}
  ],
  "require": {
    "drutiny/drutiny": "^2.3",
    "symfony/yaml": "^3.2 || ^4.0",
    "drush/drush": "^10.0@dev"
  },
  "autoload": {
    "psr-4": {
      "Drutiny\\ClamAV\\": "src/",
      "DrutinyTests\\ClamAV\\": "tests/src/"
    }
  },
  "minimum-stability": "dev",
  "require-dev": {
    "phpunit/phpunit": "^5.0",
    "squizlabs/php_codesniffer": "2.*"
  }
}
